<form method="post" action="{{ path('todo_list_delete', {'id': todo_list.id}) }}" onsubmit="return confirm('Are you sure you want to delete this to-do list?');">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ todo_list.id) }}">
	<button class="btn btn-secondary btn-shadow text-white mx-3 h-100 rounded-4">
		<i class="bi bi-trash fs-3"></i>
	</button>
</form>
