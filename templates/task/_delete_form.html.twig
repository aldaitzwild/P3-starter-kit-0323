<form method="post" action="{{ path('task_delete', {'id': task.id}) }}" onsubmit="return confirm('Are you sure you want to delete this task?');">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ task.id) }}">
	<input type="hidden" name="todo_list" value="{{todo_list.id}}">
	<button type="submit" class="btn btn-secondary border border-secondary rounded-start-0 rounded-end-3 ms-5 h-100 text-white">
		<i class="bi bi-trash fs-3"></i>
	</button>
</form>
