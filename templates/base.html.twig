<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<link rel="icon" type="image/png" href="{{ asset('build/images/favicon.png') }}"/>
		<title>
			{% block title %}Task Central
			{% endblock %}
		</title>
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>
		<div class="container-fluid">
			<div class="row">
				<div class="col-md-3 col-xl-2 px-0 bg-primary sidebar-shadow">
					{{ component('SideNavbarComponent') }}
				</div>
				<div class="col-12 col-md-9 col-xl-10 px-0">
					{{ component('TopNavbarComponent') }}
					{% for category, messages in app.flashes %}
						{% for message in messages %}
							<div class="alert alert-{{ category }}">
								{{ message }}
							</div>
						{% endfor %}
					{% endfor %}
					<div class="mt-2"> {% block body %}{% endblock %}
						</div>
					</div>
				</div>
			</div>
		</body>
	</html>
